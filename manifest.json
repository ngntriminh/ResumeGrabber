{
  "manifest_version": 3,
  "name": "Resume Grabber",
  "description": "Download resumes/cover letters from resume.io for free.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://*.resume.io/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
